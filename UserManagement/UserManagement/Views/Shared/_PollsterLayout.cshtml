
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/normalize.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />

    <link href="~/Content/css/themify-icons.css" rel="stylesheet" />

    <link href="~/Content/css/flag-icon.min.css" rel="stylesheet" />

    <link href="~/Content/css/cs-skin-elastic.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />

    <link href="~/Content/scss/style.css" rel="stylesheet" />

    <style>
        .navbar .navbar-nav li.menu-item-has-children a {
            font-family: cursive;
            font-size:15px;
        }
        html, body {
            font-family: cursive;
            font-size: 12px;
            line-height: 1.5;
        }
        .navbar .navbar-nav li.menu-item-has-children a {
            line-height: 50px;
        }

        .navbar .navbar-nav li > a {
            background: none !important;
            color: #c8c9ce !important;
            display: inline-block;
            font-family: 'Cursive';
            font-size: 20px;
            line-height: 30px;
            padding: 10px 0;
            position: relative;
            width: 100%;
        }
        .menu-icon{
           background-size:13px;
        }
        .navbar .navbar-nav li > a .menu-icon {
            color: #8b939b;
            float: left;
            margin-top: 19px;
            width: 55px;
            text-align: left;
            z-index: 9;
        }

        .navbar .navbar-nav li.menu-item-has-children .sub-menu a {
            padding: 2px 0 2px 30px;
            margin-top: 19px;
        }

        .navbar .navbar-nav li.menu-item-has-children .sub-menu i {
            color: #c8c9ce;
            float: left;
            padding: 10px;
            position: absolute;
            left: 0;
            font-size: 14px;
            
            margin-top: 19px;
        }
    </style>
</head>
<body>
    <aside id="left-panel" class="left-panel" style="font-family: cursive" >
        <nav class="navbar navbar-expand-sm navbar-default" style="font-family: cursive">
            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="./"><img src="~/Images/unnamed (1).png"/></a>
                
                <a class="navbar-brand hidden" href="./"><img src="images/logo2.png" alt="Logo"></a>
            </div>


            <div id="main-menu" class="main-menu collapse navbar-collapse">
                <ul class="nav navbar-nav">

                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-laptop"></i>Panel</a>
                        <ul class="sub-menu children dropdown-menu">
                            <li><i class="fa fa-home"></i>@Html.ActionLink("Dashboard", "PollsterIndex", "Home", new { area = "" }, null)</li>



                        </ul>
                    </li>


                    <h3 class="menu-title">About Survey</h3><!-- /.menu-title -->
                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-puzzle-piece"></i>Survey</a>
                        <ul class="sub-menu children dropdown-menu">
                            <li><i class="fa fa-pencil"></i>@Html.ActionLink("Design Questionnaire", "Create", "Surveys", new { area = "" }, null)</li>



                        </ul>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"> <i class="menu-icon fa fa-table"></i>Recent Surveys</a>
                        <ul class="sub-menu children dropdown-menu">
                            <li><i class="fa fa-info-circle"></i>@Html.ActionLink("All Survey", "Index", "Surveys", new { area = "" }, null)</li>

                        </ul>
                    </li>

                    <h3 class="menu-title">Others</h3><!-- /.menu-title -->
                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-tasks"></i>Feedback</a>
                        <ul class="sub-menu children dropdown-menu">
                            <li><i class="menu-icon fa fa-commenting"></i>@Html.ActionLink("Give Feedback", "CreateFeedback", "Feedbacks", new { area = "" }, null)</li>

                        </ul>
                    </li>

                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-send"></i>Share</a>
                        <ul class="sub-menu children dropdown-menu">
                            <li><i class="menu-icon fa fa-share"></i>@Html.ActionLink("Share Survey", "ShareLink", "Surveys", new { area = "" }, null)</li>

                        </ul>
                    </li>

                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-tasks"></i>Reports</a>
                        <ul class="sub-menu children dropdown-menu">
                            <li><i class="menu-icon fa fa-bar-chart-o"></i>@Html.ActionLink("Make Reports", "generateReport", "Surveys", new { area = "" }, null)</li>

                        </ul>
                    </li>




                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-cog"></i>Settings</a>
                        <ul class="sub-menu children dropdown-menu">


                            <li><i class="menu-icon fa fa-power-off"></i> @Html.ActionLink("Log out", "LogOut", "Users", new { area = "" }, null)</li>
                            <li><i class="menu-icon fa fa-power-off"></i> @Html.ActionLink("Recover Password", "RecoverPassword", "Users", new { area = "" }, null)</li>
                        </ul>
                    </li>

</div><!-- /.navbar-collapse -->
        </nav>
    </aside>
    <div id="right-panel" class="right-panel">
       


                        <!-- Header-->
                        <header id="header" class="header">
                            <div class="header-menu">
                                <div class="col-sm-7">
                                    <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
                                    <div class="header-left">
                                        <button class="search-trigger"><i class="fa fa-search"></i></button>
                                        <div class="form-inline">
                                            <form class="search-form">
                                                <input class="form-control mr-sm-2" type="text" placeholder="Search ..." aria-label="Search">
                                                <button class="search-close" type="submit"><i class="fa fa-close"></i></button>
                                            </form>
                                        </div>

                                        @*<a><img src="~/Images/logooooo.PNG" alt="Logo" /></a>*@


                                    </div>
                                </div>
                                <div class="col-sm-5">














                                    <div class="user-area dropdown float-right">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                                            <img src="~/images/avatar/admin.jpg" class="user-avatar rounded-circle" alt="User Avatar" />
                                        </a>
                                        <div class="user-menu dropdown-menu">
                                            <a class="nav-link" href="#"><i class="fa fa- user"></i>My Profile</a>
                                            <a class="nav-link" href="#"><i class="fa fa- user"></i>Notifications <span class="count">13</span></a>
                                            <a class="nav-link" href="#"><i class="fa fa -cog"></i>Settings</a>
                                            <a class="nav-link" href="#"><i class="fa fa-power -off"></i>Logout</a>
                                        </div>
                                    </div>
                                    <div class="language-select dropdown" id="language-select" style="color:black">
                                        <strong class="font-weight-bold">Welcome @Session["UserName"]</strong>
                                        <div class="dropdown-menu" aria-labelledby="language">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </header><!-- /header -->
                        <!-- Header-->

                        <div class="content mt-3">
                            @RenderBody()
                        </div><!-- .content -->

                    </div><!-- /#right-panel -->
                    <!-- Right Panel -->


                    <script src="~/Content/js/vendor/jquery-2.1.4.min.js"></script>


                    <script src="~/Content/js/chartjs.min.js"></script>
                    <script src="~/Content/js/dashboard.js"></script>
                    <script src="~/Content/js/less.min.js"></script>
                    <script src="~/Content/js/main.js"></script>
                    <script src="~/Content/js/plugins.js"></script>
                    <script src="~/Content/js/popper.min.js"></script>
                    <script src="~/Content/js/selectFx.js"></script>
                    <script src="~/Content/js/widgets.js"></script>

                    <script src="~/Content/js/lib/chart-js/Chart.bundle.js"></script>
                    <script src="~/Content/js/lib/chart-js/chartjs-init.js"></script>
                    <script src="~/Content/js/vendor/jquery-1.11.3.min.js"></script>
                    <script src="~/Content/js/chartjs.min.js"></script>
                    <script src="~/Content/js/dashboard.js"></script>
                    <script src="~/Content/js/widgets.js"></script>

</body>
</html>
