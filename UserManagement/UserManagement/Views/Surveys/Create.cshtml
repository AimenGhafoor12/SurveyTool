<style>
     body {
        font-family: cursive;
        font-size: 17px;
        line-height: 1.5;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <html>
    <body>
        
        <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
            <div class="wrapper wrapper--w680">
                <div class="card card-4" style="font-family:cursive">
                    <div class="card-body">
                        <h2 class="title">Create Your Survey Here</h2>
                        <form method="POST">
                            <div class="row row-space">
                                <div class="col-5">
                                    <div class="input-group" data-validate="Enter surveyname">
                                        <label class="label">Survey Name</label>
                                        <input class="input--style-4" type="text" name="surveyName" required>
                                    </div>
                                </div>
                                <div class="col-5">
                                    <div class="input-group" data-validate="Enter description">
                                        <label class="label">Description</label>
                                        <input class="input--style-4" type="text" name="Description" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row row-space">
                                <div class="col-5">
                                    <div class="input-group">
                                        <label class="label">Start Date</label>
                                        <div class="input-group-icon" data-validate="Enter startdate">
                                            <input class="input--style-4 js-datepicker" type="text" name="startData" required>
                                            <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-5">
                                    <div class="input-group">
                                        <label class="label">End Date</label>
                                        <div class="input-group-icon" data-validate="Enter enddate">
                                            <input class="input--style-4 js-datepicker" type="text" name="endDate" required>
                                            <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="p-t-15">
                                    <button class="btn btn--radius-2 btn--blue" type="submit">Create</button>
                                </div>

                                &nbsp;
                                &nbsp;
                                &nbsp;
                                <div class="p-t-15">
                                    <button class="btn btn--radius-2 btn--blue">@Html.ActionLink("My Surveys", "Index", "Surveys",  new { area = "" },  new { @style = "color:white" })</button>
                                </div>
                              
                                @*<div class="p-t-15" style="float:left">
            @Html.ActionLink("My Surveys", "Index", new { @class = "float:right"})
        </div>*@
                            </div>
                            

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
    
}


