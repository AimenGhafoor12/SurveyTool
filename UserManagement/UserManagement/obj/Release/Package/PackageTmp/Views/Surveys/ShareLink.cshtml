    <!-- Main CSS-->
    <link href="~/createSurvey/css/main.css" rel="stylesheet" media="all">
</head>
<body>
    <style>
        html, body {
            width: 100%;
            height: 100%;
            margin: 0;
            font-family: cursive;
            font-size: 17px;
            line-height: 1.5;
        }
    </style>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins" style="font-family: cursive;">
            <div class="wrapper wrapper--w680">
                <div class="card card-4">
                    <div class="card-body">
                        <h2 class="title">Share Your Survey Here</h2>
                        <form method="POST">
                            <div class="row row-space">
                                <div class="col-5">
                                    <div class="input-group">
                                        <label class="label">Email</label>
                                        <input class="input--style-4" type="email" name="username" required>
                                    </div>
                                </div>
                                <div class="col-5">
                                    <div class="input-group">
                                        <label class="label">Survey Name</label>
                                        <input class="input--style-4" type="text" name="mylink" required>
                                    </div>
                                </div>
                            </div>
                            @*<div class="row row-space">
                                    <div class="col-5">
                                        <div class="input-group">
                                            <label class="label">Start Date</label>
                                            <div class="input-group-icon">
                                                <input class="input--style-4 js-datepicker" type="text" name="startData">
                                                <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-5">
                                        <div class="input-group">
                                            <label class="label">End Date</label>
                                            <div class="input-group-icon">
                                                <input class="input--style-4 js-datepicker" type="text" name="endDate">
                                                <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>*@


                            <div class="p-t-15">
                                <button class="btn btn--radius-2 btn--blue" type="submit">Share</button>
                            </div>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>


