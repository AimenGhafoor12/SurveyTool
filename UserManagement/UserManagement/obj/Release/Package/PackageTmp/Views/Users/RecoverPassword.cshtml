<style>
    body {
        font-family: cursive;
        font-size: 17px;
        line-height: 1.5;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <html>
    <body>

        <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
            <div class="wrapper wrapper--w680">
                <div class="card card-4" style="font-family:cursive">
                    <div class="card-body">
                        <h2 class="title">Change Your Password Here</h2>
                        <form method="POST">
                            <div class="row row-space">
                                <div class="col-5">
                                    <div class="input-group">
                                        <label class="label">Current Password</label>
                                        <input class="input--style-4" type="password" name="currentPassword" required>
                                    </div>
                                </div>
                                <div class="col-5">
                                    <div class="input-group">
                                        <label class="label">New Password</label>
                                        <input class="input--style-4" type="password" name="newPassword1" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row row-space">
                                <div class="col-5">
                                    <div class="input-group">
                                        <label class="label">Confirm New Password</label>
                                        <input class="input--style-4" type="password" name="newPassword2" required>
                                    </div>
                                </div>


                            </div>

                            <div class="row">
                                <div class="p-t-15">
                                    <button class="btn btn--radius-2 btn--blue" type="submit" onsubmit="return checkForm(this);">Submit</button>
                                </div>

                                &nbsp;
                                &nbsp;
                                &nbsp;
                            </div>

                            <div class="row row-space">
                                <div class="col-5">
                                    <div class="input-group">
                                        @Html.ActionLink("My Surveys", "Index")
                                    </div>
                                </div>

                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>

}

<script>
function checkForm(form)
  {
    if (form.newPassword1.value == "") {
      alert("Error: password cannot be blank!");
        form.newPassword2.focus();
      return false;
    }
    re = /^\w+$/;
    if(!re.test(form.username.value)) {
      alert("Error: Username must contain only letters, numbers and underscores!");
      form.username.focus();
      return false;
    }

    if (form.newPassword1.value != "" && form.newPassword1.value == form.newPassword2.value) {
        if (form.newPassword1.value.length < 6) {
            alert("Error: Password must contain at least six characters!");
            form.newPassword1.focus();
        return false;
      }
        
      re = /[0-9]/;
        if (!re.test(form.newPassword1.value)) {
        alert("Error: password must contain at least one number!");
            form.newPassword1.focus();
        return false;
      }
      
    } 

    alert("You entered a valid password: " + form.pwd1.value);
    return true;
  }

</script>



