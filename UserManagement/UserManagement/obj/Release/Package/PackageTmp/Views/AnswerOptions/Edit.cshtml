@model UserManagement.Models.AnswerOption

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AnswerOption</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.optionId)

        <div class="form-group">
            @Html.LabelFor(model => model.optionString, htmlAttributes: new { @class = "control-label col-md-2" })
